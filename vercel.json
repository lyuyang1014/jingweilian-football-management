{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/health",
      "dest": "/server.js"
    },
    {
      "src": "/(.*\\.(?:html|css|js|png|jpg|jpeg|gif|svg|ico|json|csv))",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/display.html"
    }
  ]
} 